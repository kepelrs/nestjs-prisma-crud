{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../../",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "<rootDir>/testApp/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
        "ts-jest": {
            "diagnostics": false,
            "tsconfig": "<rootDir>/testApp/tsconfig.json"
        }
    },
    "collectCoverageFrom": ["<rootDir>/src/**/*.ts"]
}
