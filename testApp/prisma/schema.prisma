// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions", "orderByRelation"]
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String

  posts             Post[]
  entitiesWithIntId EntityWithIntId[]
  // comments Comment[]
  profile           Profile?
  country           Country?          @relation(fields: [countryId], references: [id])
  countryId         String?
}

model Country {
  id                String  @id @default(uuid())
  name              String  @unique
  someNullableValue String?

  user User[]
}

model Profile {
  id       String @id @default(uuid())
  fullName String @unique

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String?
  published Boolean? @default(false)

  author     User?      @relation(fields: [authorId], references: [id])
  authorId   String? // ? in order for set:[] to work: https://github.com/prisma/prisma/issues/2328
  comments   Comment[]
  categories Category[]
}

model Comment {
  id                       String   @id @default(uuid())
  title                    String
  content                  String?
  published                Boolean? @default(false)
  exampleForbiddenProperty String

  // author   User @relation(fields: [authorId], references: [id])
  // authorId String

  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Category {
  id    String @id @default(uuid())
  title String
  posts Post[]
}

model EntityWithIntId {
  exampleDifferentIdName Int     @id @default(autoincrement())
  exampleProperty        String
  user                   User?   @relation(fields: [userId], references: [id])
  userId                 String?
}

model AuditLog {
  id      String @id @default(uuid())
  content String
}
