{
    "name": "test",
    "version": "0.0.4",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "yarn run test:e2e",
        "test:watch": "yarn run test:e2e -- --watch",
        "test:cov": "yarn run test:e2e -- --coverage",
        "test:clear": "jest --clearCache",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "prisma migrate reset --force && jest --config ./test/jest-e2e.json --runInBand",
        "reset": "prisma migrate reset",
        "generate-migration": "prisma migrate dev --create-only",
        "migrate": "prisma migrate deploy",
        "scaffold-module": "nest g -c nestjs-prisma-crud-schematics crud-resource"
    },
    "dependencies": {
        "@nestjs/common": "^8.1.2",
        "@nestjs/core": "^8.0.6",
        "@nestjs/mapped-types": "^1.0.0",
        "@nestjs/platform-express": "^8.0.6",
        "@prisma/client": "^3.5.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "object-traversal": "^0.1.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.1.4",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.11",
        "@types/jest": "^27.0.0",
        "@types/node": "^14.14.36",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^27.3.1",
        "prettier": "^2.2.1",
        "prisma": "^3.5.0",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.0",
        "ts-loader": "^8.0.18",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "resolutions": {
        "**/@typescript-eslint/eslint-plugin": "^4.11.1",
        "**/@typescript-eslint/parser": "^4.11.1",
        "**/jest": "^27.0.0",
        "**/ts-jest": "^27.0.0",
        "**/typescript": "^4.1.5"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
